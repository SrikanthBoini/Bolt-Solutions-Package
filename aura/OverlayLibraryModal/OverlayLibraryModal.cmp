<aura:component access="global">
    <aura:registerEvent name="appEvent" type="c:OverlayLibraryModalEvent"/>
    <lightning:overlayLibrary aura:id="overlayLib"/>
    <aura:attribute name="statusMessage" type="String" />
    <aura:attribute name="showCommentBox" type="boolean" default="false" /> 
    <aura:attribute name="comments" type="String" default='' />
     <aura:attribute name="validity" type="Boolean" default="true"/>
     <aura:attribute name="errorMessage" type="String" default="Please enter comments for decline"/>
    
    <!--Component Start--> 
    
    <div class="slds-text-align_center slds-m-around_x-medium">
        <aura:if isTrue="{!v.showCommentBox}" >
        <div class="slds-form-element" style="margin-top:10px;">
            <div class="slds-form-element__control">
                <lightning:inputRichText aura:id="comments" value="{!v.comments}" messageWhenBadInput="{!v.errorMessage}" valid="{!v.validity}" />
            </div>
        </div>
       </aura:if>
       
        <lightning:button name="cancel" label="Cancel" onclick="{!c.handleCancel}"/>
        <lightning:button name="ok" label="OK" variant="brand" onclick="{!c.handleOK}"/>
    </div>
    <!--Component End-->
</aura:component>